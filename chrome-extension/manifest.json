{
	"name" : "White Space Diff for Bitbucket",
	"description" : "Set white space and tab size preferences for Bitbucket pull requests and commits.",

	"manifest_version" : 2,
	"version" : "2.1",

	"icons" : {
		"48" : "img/icon_48.png",
		"128" : "img/icon_128.png"
	},
	"options_ui" : {
		"chrome_style" : true,
		"page" : "options.html"
	},
	"page_action" : {
		"default_icon" : {
			"19" : "img/icon_19.png",
			"38" : "img/icon_38.png",
			"48" : "img/icon_48.png"
		},
		"default_title" : "White Space Diff for Bitbucket"
	},
	"content_scripts" : [
		{
			"matches" : [
				"https://bitbucket.org/*/branch/*",
				"https://bitbucket.org/*/commits/*",
				"https://bitbucket.org/*/pull-request/*/*",
				"https://bitbucket.org/*/pull-requests/*",
				"https://bitbucket.org/*/pull-requests/*/*"
			],
			"exclude_matches" : [
				"https://bitbucket.org/*/new?*",
				"https://bitbucket.org/*/pull-requests/",
				"https://bitbucket.org/*/update/*"
			],
			"js" : ["white-space.js"]
		}
	],
	"permissions" : [
		"https://bitbucket.org/*",
		"storage",
		"tabs"
	]
}
