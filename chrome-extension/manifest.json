{
	"manifest_version" : 2,
	"name" : "White Space Diff for Bitbucket",
	"version" : "1.4",
	"description" : "Hide white space differences in Bitbucket pull requests and commits.",
	"icons" : {
		"48" : "img/icon_48.png",
		"128" : "img/icon_128.png"
	},
	"page_action" : {
		"default_icon" : {
			"19" : "img/icon_19.png",
			"38" : "img/icon_38.png"
		},
		"default_title" : "White Space Diff for Bitbucket"
	},
	"content_scripts" : [
		{
			"matches" : [
				"https://bitbucket.org/*/commits/*",
				"https://bitbucket.org/*/pull-request/*/*",
				"https://bitbucket.org/*/pull-requests/*/*"
			],
			"exclude_matches" : [
				"https://bitbucket.org/*/new?*",
				"https://bitbucket.org/*/update/*"
			],
			"js" : ["white-space.js"]
		}
	],
	"permissions" : ["tabs"]
}
